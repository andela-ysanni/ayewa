<!-- Reservation form -->
<section id="reservation-form">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <!-- <form action="" class="form-inline reservation-horizontal clearfix" id="reservationform" method="post" name="reservationform" role="form"> -->
        <%= form_tag(listings_path, method: "get", class: "form-inline reservation-horizontal clearfix", id: "", role: 'form') do %>
<!-- Error message -->
          <!-- <div id="message"></div> -->
          <div class="row">
            <div class="col-sm-4 col-md-offset-1 ">
              <div class="form-group">
                <label accesskey="E" for="email">Name</label>
                <!-- <input class="form-control" id="email" name="email" placeholder="Please enter your E-mail" type="text" value=""/> -->
                <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Apartment Name" %>
              </div>
            </div>

            <div class="col-sm-4  ">
              <div class="form-group">
                <label for="email">Location</label>
                <%= text_field_tag :location, params[:location], class: "form-control", placeholder: "Apartment Location" %>
                <!-- <input class="form-control" id="email" name="email" placeholder="Please enter your E-mail" type="text" value=""/> -->
              </div>
            </div>

            <div class="col-sm-2">
              <button class="btn btn-primary btn-block" type="submit"><i class="icon-search"></i>Search</button>
            </div>
          </div>
          <% end %>
        <!-- </form> -->
      </div>
    </div>
  </div>
</section>
