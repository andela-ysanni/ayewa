  <div class="container">
    <div class = "row login-form col-md-5 col-sm-7">
      <div class="wrapper">
        <%= form_tag sessions_path, class: "form-signin" do %>
          <h3 class="form-signin-heading">Welcome Back! Please Sign In</h3>
          <hr class="colorgraph"><br>
          <%= label_tag :email %><br />
          <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>

          <%= label_tag :password %><br />
          <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>

          <%= submit_tag "Login", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
