<!-- Rooms -->
<section class="rooms mt50">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2 class="lined-heading"><span>Available Listings</span></h2>
      </div>
    <% for listing in @listing %>
      <!-- Room -->
      <div class="col-sm-4">
        <div class="room-thumb"><%= image_tag listing.images[0].name_url, alt: 'room 1', class: 'img-responsive' %>
          <div class="mask">
            <div class="main">
              <h5><%= listing.name %></h5>
              <div class="price"><%=number_to_currency listing.price, unit: "â‚¦", separator: "." %><span><%= listing.location %></span></div>
            </div>
            <div class="content">
              <p><%= listing.description %></p>
              <%= link_to "Read More", listing,  class:"btn btn-primary btn-block" %>
            </div>
          </div>
        </div>
      </div>
     <% end %>
      <!-- Room -->
    </div>
  </div>
</section>

